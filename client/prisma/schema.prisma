generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  WC WARRANTY_CARD[]
}

model message {
  id String @id @default(uuid())
  message String?
  image String?
  sender String
  receiver String
}

model WARRANTY_CARD {
  WC_Serial String @id @default(uuid())
  WC_Model String
  Customer User @relation(fields: [C_ID], references: [id])
  C_ID String
  WC_Store String
  WC_Status String
  WC_Address String
  WC_Image_link String
  WC_Installation_date DateTime
  WC_Auth Boolean
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
